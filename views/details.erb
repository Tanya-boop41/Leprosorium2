<h2>О посте</h2>
<br/>
	<p>
		<%= @row['content'] %>
		<br/>
		<br/>
		Автор <%= @row['author'] %>
		<br/>
		<br/>
		Добавлен <%= @row['created_date'] %>
	</p>
<br/>

<h4>Комментарии:</h4>
<br/>

	<% @comments.each do |comment| %>
	<p>
		<%= comment['content'] %>
		<br/>
		<br/>
		<span style="font-size: 75%; color: #999">Добавлен <%= comment['created_date'] %></span>
	</p>
	<hr/>
	<% end %>
<br/>
	<form action="/details/<%= @row['id']%>", method="POST" class="form">
	<div class="form-floating">
  		<textarea name="content" class="form-control" rows="3" placeholder="Leave a comments here"></textarea>
  	</div>
  	<br/>
	<div class="form-group">
       <button type="submit" class="btn btn-primary">Добавить комментарий</button>
  	</div>
</form>
